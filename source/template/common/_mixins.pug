mixin socialsWelcome (className, items, modificator)
	div(class=`${className} ${className}_${modificator}`)
		ul(class=`${className}__list ${className}__list_${modificator}`)
			each cont in items
				li(class=`${className}__item ${className}__item_${modificator}`)
					a(href=`${cont[1]}` target=`_blank` class=`${className}__link ${className}__link_${modificator} fa fa-${cont[0]}`)
						span.social__name= cont[2]

//- menu button on welcome page

mixin cardButtons (className, items, activeItem)
	nav(class=`${className}`)
		ul(class=`${className}__list`)
			each link, nav in items
				li(class=`${className}__item` + ((ndx == activeItem) ? ' ${className}__item_active' : ''))
					a(href=`${link}` class=`${className}__link`)= nav

//- Skills diagram
//- mixin diagram(className, skill)
	ul.right-side__diagrams
		each item, key in className
			li(class=`diagram__title ${className}`)
				h4(class=`title__skill ${className}`)= className[key]
				ul.diagram__list
					each val item in skill
						li.diagram__item
							input.dial(type="text" value=`${val}`)
							.skill__name= item